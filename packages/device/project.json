{
    "name": "device",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/device/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "target": "node",
                "compiler": "tsc",
                "externalDependencies": "none",
                "outputPath": "dist/packages/device",
                "main": "packages/device/src/main.ts",
                "tsConfig": "packages/device/tsconfig.app.json",
                "isolatedConfig": true,
                "webpackConfig": "packages/device/webpack.config.js"
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/device/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/device/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
